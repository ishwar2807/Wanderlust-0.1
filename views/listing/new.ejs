<% layout("/layouts/boilar") -%>
<body>
    <br><br>
    <h3 class="offset-2">Create New Listing</h3>
    
    <div class="row">
        <div class="col-8 offset-2">
    <form method="post" action="/listing" class="needs-validation" novalidate enctype="multipart/form-data">
            
            <div class="mb-1">
                <label for="title" class="form-label">title</label>
                <input name="listing[title]" type="text" class="form-control"  placeholder="add a catchy title" required>
                <div class="valid-feedback"> Title Looks good!</div> 
            
            </div>
            
            <div class="mb-1">
                <label for="description" class="form-label">description</label>
                <textarea name="listing[description]" type="text" class="form-control" required></textarea>
                <div class="invalid-feedback">
                enter a description
                  </div>
            </div>
            
    
           <div class="mb-1">
            <label for="image" class="form-label">upload Listing image</label>
            <input name="listing[image]"type="file" class="form-control"  required >
            
           </div>

           
           <div class=" mb-1 row">
           
               <div class=" mb-1 col-4">
                   <label for="price" class="form-label">price</label>
                   <input name="listing[price]" type="" class="form-control" placeholder=" Ex. 1200" required>
                   <div class="invalid-feedback">
                    Price Should Be Valid
                  </div>
               </div>
           
               <div class="mb-1 col-8">
                   <label for="country" class="form-label">country</label>
                   <input name="listing[country]" type="text" class="form-control" placeholder=" Ex.  india" required>
                   <div class="invalid-feedback">
                     Contry Name Should Be Valid
                  </div>
               </div>
    
           </div>
            
            <div class="mb-1">
                <label for="location" class="form-label">location</label>
                <input name="listing[location]" type="text" class="form-control" placeholder=" Ex.  jaipur ,rajasthan" required>
                <div class="invalid-feedback">
                    Location Should Be valid
                  </div>
            </div>
            <br><br>
            <button class="btn btn-dark ">add</button>
             <br><br>        
        </form> 
        
    </div>
    </div>
        
</body>